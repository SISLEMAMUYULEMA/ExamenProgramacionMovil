<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ANGELSISLEMAEXAMEN.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="INGRESO"  HorizontalTextAlignment="Center" TextColor="Gray" FontSize="20"  />

            <Image Source="logoU" Aspect="AspectFit" />

            <Entry x:Name="txtUser"
               Placeholder="Ingrese el usuario"/>

            <Entry x:Name="txtPass"
               Placeholder="Ingrese la contrasena"
              />

            <Button x:Name="btnAbrir"
                Text="Abrir"
                Clicked="btnAbrir_Clicked"/>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>